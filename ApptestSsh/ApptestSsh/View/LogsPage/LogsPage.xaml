<?xml version="1.0" encoding="utf-8" ?>
<mvvm:ListViewPage x:TypeArguments="logsPage:LogsListViewPageViewModel" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mvvm="clr-namespace:Doods.StdFramework.Mvvm;assembly=Doods.StdFramework"
             xmlns:logsPage="clr-namespace:ApptestSsh.Core.View.LogsPage;assembly=ApptestSsh.Core"
             xmlns:views="clr-namespace:Doods.StdFramework.Views;assembly=Doods.StdFramework"
             x:Class="ApptestSsh.Core.View.LogsPage.LogsPage">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem}"
                  ItemTapped="Handle_ItemTapped"
                  ItemSelected="Handle_ItemSelected"
                  HasUnevenRows="true"
                  IsPullToRefreshEnabled="true"
                  CachingStrategy="RecycleElement"
                  IsRefreshing="{Binding IsBusyList, Mode=TwoWay}"
                  RefreshCommand="{Binding RefreshDataCommand,Mode=OneWay}">


            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name,Mode=OneWay}"
                              Detail="{Binding Date,Mode=OneWay}" />
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </ContentPage.Content>
</mvvm:ListViewPage>